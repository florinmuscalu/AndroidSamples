<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/ralewey</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="text_color_inverted">#000</item>
        <item name="buttonStyle">@style/BUTTON_STYLE_LIGHT</item>
        <item name="buttonTextStyle">@style/BUTTON_TEXT_STYLE_LIGHT</item>
        <item name="android:spinnerItemStyle">@style/SPINNER_STYLE_LIGHT</item>
        <item name="android:checkboxStyle">@style/CHECKBOX_STYLE_LIGHT</item>
        <item name="activity_background_color">#FFFFFF</item>
        <item name="text_color">#000000</item>
        <item name="link_color">#00f</item>
        <item name="theory_card_color">#ccc</item>
        <item name="theory_sub_card_color">#bbb</item>
        <item name="text_hint_color">#777</item>
        <item name="card_front_color">#b0e0e6</item>
        <item name="card_back_color">#bc4c4a</item>
        <item name="card_front_text_color">#000000</item>
        <item name="card_back_text_color">#ffffff</item>
        <item name="webview_color">#ffb0e0e6</item>
        <item name="webview_color_foreground">#f000</item>
        <item name="flashcard_button_correct">@style/FLASHCARD_BUTTON_CORRECT_STYLE</item>
        <item name="flashcard_button_wrong">@style/FLASHCARD_BUTTON_WRONG_STYLE</item>
        <item name="fragment_background_color">@drawable/fragment_light</item>
        <item name="button_dropdown">@style/SPINNER_STYLE_LIGHT</item>
        <item name="listItemStyle">@style/LIST_ITEM_STYLE_LIGHT</item>

        <item name="TextViewStyle">@style/TEXT_VIEW_STYLE</item>
        <item name="TextViewSmallStyle">@style/TEXT_VIEW_SMALL_STYLE</item>
    </style>

    <style name="CHECKBOX_STYLE_LIGHT" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000000</item>
        <item name="android:buttonTint">#d81b60</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Alert_LightTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#0b0b0b</item>
        <item name="android:textColor">#0b0b0b</item>
        <item name="android:textColorPrimary">#0b0b0b</item>
        <item name="android:background">#fAAA</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SPINNER_STYLE_LIGHT">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawableLeft">@drawable/dropdown</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BUTTON_STYLE_LIGHT" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:height">50dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/btn_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BUTTON_TEXT_STYLE_LIGHT" >
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="LIST_ITEM_STYLE_LIGHT" parent="android:Widget.TextView">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>