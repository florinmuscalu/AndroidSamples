<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:fontFamily">@font/ralewey</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="text_color_inverted">#000</item>
        <item name="buttonStyle">@style/BUTTON_STYLE_DARK</item>
        <item name="buttonTextStyle">@style/BUTTON_TEXT_STYLE_DARK</item>
        <item name="android:spinnerItemStyle">@style/SPINNER_STYLE_DARK</item>
        <item name="android:checkboxStyle">@style/CHECKBOX_STYLE_DARK</item>
        <item name="activity_background_color">#000000</item>
        <item name="theory_card_color">#333</item>
        <item name="theory_sub_card_color">#444</item>
        <item name="text_color">#ffffff</item>
        <item name="link_color">#ff0</item>
        <item name="text_hint_color">#777</item>
        <item name="card_front_color">#b0e0e6</item>
        <item name="card_back_color">#bc4c4a</item>
        <item name="card_front_text_color">#000000</item>
        <item name="card_back_text_color">#ffffff</item>
        <item name="webview_color">#ffb0e0e6</item>
        <item name="webview_color_foreground">#ff000000</item>
        <item name="flashcard_button_correct">@style/FLASHCARD_BUTTON_CORRECT_STYLE</item>
        <item name="flashcard_button_wrong">@style/FLASHCARD_BUTTON_WRONG_STYLE</item>
        <item name="fragment_background_color">@drawable/fragment_dark</item>
        <item name="button_dropdown">@style/SPINNER_STYLE_DARK</item>
        <item name="listItemStyle">@style/LIST_ITEM_STYLE_DARK</item>

        <item name="TextViewStyle">@style/TEXT_VIEW_STYLE</item>
        <item name="TextViewSmallStyle">@style/TEXT_VIEW_SMALL_STYLE</item>
    </style>

    <style name="CHECKBOX_STYLE_DARK" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>`
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:buttonTint">#a00037</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Alert_DarkTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#f3f3f3</item>
        <item name="android:textColor">#f3f3f3</item>
        <item name="android:textColorPrimary">#f3f3f3</item>
        <item name="android:background">#f555</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SPINNER_STYLE_DARK">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawableLeft">@drawable/dropdown</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BUTTON_STYLE_DARK" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:height">50dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/btn_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BUTTON_TEXT_STYLE_DARK" >
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="LIST_ITEM_STYLE_DARK" parent="android:Widget.TextView">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>