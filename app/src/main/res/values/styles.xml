<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FLASHCARD_BUTTON_CORRECT_STYLE" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_correct</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FLASHCARD_BUTTON_WRONG_STYLE" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_wrong</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TEXT_VIEW_STYLE" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TEXT_VIEW_SMALL_STYLE" parent="android:Widget.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Stripe.CardInputWidget.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textColorHint">?attr/text_hint_color</item>
        <item name="android:background">?attr/activity_background_color</item>
    </style>
</resources>
